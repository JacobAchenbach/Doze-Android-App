<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:minWidth="48dp" android:layout_width="wrap_content"
    android:layout_height="@dimen/item_size_small"
    android:layout_gravity="end"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="12dp">
    <RelativeLayout
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true">
        <ImageView
            android:id="@+id/icon_options"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:background="@drawable/baseline_more_horiz_24"
            android:clickable="false"
            android:focusable="false"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/container_option_icons"
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_alignParentEnd="true"
        android:alpha="0"
        android:background="@drawable/background_white_transparent_border">
    </RelativeLayout>


</RelativeLayout>