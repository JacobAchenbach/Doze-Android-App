<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:minWidth="48dp" android:layout_width="wrap_content"
    android:layout_height="@dimen/item_size_small">
    <ImageView
        android:id="@+id/icon_options"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/baseline_more_horiz_24"/>

    <RelativeLayout
        android:id="@+id/container_option_icons"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:alpha="0">

    </RelativeLayout>

</RelativeLayout>