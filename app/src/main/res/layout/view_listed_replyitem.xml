<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_size_large"
    android:layout_marginTop="@dimen/padding_large"
    android:layout_marginStart="@dimen/padding_large"
    android:layout_marginEnd="@dimen/padding_large"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/disabled_indicator"
            android:background="@drawable/outline_blue_rounded"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"/>

        <FrameLayout
            android:id="@+id/enabled_indicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blue_gradient"
            android:visibility="gone"/>

        <Button
            android:id="@+id/item_options"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/padding_large"
            android:layout_marginTop="@dimen/padding_medium"
            android:background="@drawable/baseline_arrow_drop_down_white_24"
            android:backgroundTint="@color/black"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_xlarge"
            android:layout_marginStart="@dimen/padding_xlarge"
            android:layout_marginTop="@dimen/padding_medium"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="20sp"
            android:text="Work"/>

        <TextView
            android:id="@+id/reply_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title"
            android:layout_marginTop="@dimen/padding_small"
            android:layout_marginStart="@dimen/padding_xlarge"
            android:layout_marginEnd="@dimen/padding_xlarge"
            android:layout_marginBottom="@dimen/padding_medium"
            android:ellipsize="end"
            android:text="Cooking my cat, talk soon."/>
    </RelativeLayout>



</android.support.v7.widget.CardView>