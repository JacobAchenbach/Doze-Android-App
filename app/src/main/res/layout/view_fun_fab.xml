<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:clickable="false"
    android:focusable="false"
    android:background="@drawable/black_bg"
    android:isScrollContainer="false">

    <android.support.v7.widget.CardView
        android:id="@+id/fab"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="@dimen/padding_large"
        android:layout_marginBottom="@dimen/padding_xlarge"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="28dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/reply_blue"
        android:background="@color/transparent"
        android:isScrollContainer="false">
        <!--app:cardBackgroundColor="@color/colorAccent"-->
        <RelativeLayout
            android:id="@+id/fab_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:elevation="2dp"
            android:isScrollContainer="false"
            android:background="@color/material_800">
            <LinearLayout
                android:id="@+id/submit_button_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_size_medium"
                android:paddingEnd="@dimen/padding_xlarge"
                android:layout_alignParentEnd="true"
                android:gravity="end|center_vertical"
                android:visibility="gone">
                <TextView
                    android:id="@+id/submit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/padding_medium"
                    android:background="@color/transparent"
                    android:text="Save"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:elevation="2dp"
                    android:textColor="@color/text_color_primary" />
                <LinearLayout
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/submit_image"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/baseline_check_black_18"
                        android:backgroundTint="@color/text_color_primary"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cancel_button_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_size_medium"
                android:paddingStart="@dimen/padding_xlarge"
                android:gravity="start|center_vertical"
                android:visibility="gone">
                <TextView
                    android:id="@+id/cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/padding_small"
                    android:background="@color/transparent"
                    android:text="Cancel"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:elevation="2dp"
                    android:textColor="@color/text_color_primary" />
                <LinearLayout
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/cancel_image"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/baseline_close_black_18"
                        android:backgroundTint="@color/text_color_primary"
                        android:elevation="4dp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/padding_large"
                android:layout_marginEnd="@dimen/padding_large"
                android:layout_below="@id/cancel_button_wrapper"
                android:background="@color/white"
                android:visibility="gone"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/container"
            android:alpha="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/reply_blue"
            android:paddingTop="@dimen/item_size_large">
            <!--

                    <RelativeLayout
                        android:id="@+id/expanded_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/submit_button">

                    </RelativeLayout>-->

        </RelativeLayout>


        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/baseline_create_black_36"
            android:backgroundTint="@color/white"/>

    </android.support.v7.widget.CardView>
</RelativeLayout>